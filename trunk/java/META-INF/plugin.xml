<?xml version='1.0'?>
<!DOCTYPE idea-plugin SYSTEM "http://plugins.intellij.net/plugin.dtd">

<idea-plugin url="@project.url@">
    <vendor url="@project.author.url@" email="@project.author.email@">@project.author@</vendor>
    <name>@project.title@</name>
    <version>@project.version@</version>
    <description>@project.description@</description>
    <change-notes><![CDATA[<html><pre>@project.version.notes@</pre></html>]]></change-notes>
    <idea-version since-build="2008"/> <!--@idea.build.number@-->
    
    <!-- Project components -->
    <project-components>
        <component>
            <implementation-class>net.java.accurev4idea.AccuRevVcs</implementation-class>
            <option name="workspace" value="true"/>
        </component>
    </project-components>

    <actions>
        <group id="AccuRevGlobalActionsGroup">
            <add-to-group group-id="VcsGlobalGroup" anchor="last"/>
            <action id="AccuRev.CommitProject" class="net.java.accurev4idea.actions.ActionCommitProject" text="_Keep changes..." description="Bring up commit project window">
                <keyboard-shortcut first-keystroke="control K" keymap="$default"/>
            </action>
            <action id="AccuRev.UpdateProject" class="net.java.accurev4idea.actions.ActionUpdateProject" text="_Update..." description="Run 'accurev update' for current project.">
                <keyboard-shortcut first-keystroke="control T" keymap="$default"/>
            </action>
            <action id="AccuRev.ActionStatusUpdate" class="net.java.accurev4idea.actions.ActionStatusUpdate" text="_Refresh Status..." description="Updates statuses of all files from AccuRev"/>
        </group>

        <group id="AccuRevFileActionsGroup">
            <separator/>
            <add-to-group group-id="FileMenu" anchor="before" relative-to-action="NewProject"/>
            <action id="AccuRev.ActionProjectWizard" class="net.java.accurev4idea.actions.ActionProjectWizard" text="AccuRev Project _Wizard..." description="AccuRev create project step-by-step Wizard" icon="/fw/images/accli16.gif"/>
            <separator/>
        </group>

        <group id="AccuRevVcsActionsGroup">
            <separator/>
            <action id="AccuRev.ActionRevert" class="net.java.accurev4idea.actions.ActionRevert" text="Revert" description="Revert local changes to the file" icon="/actions/reset.png"/>
            <separator/>
            <action id="AccuRev.ActionDiff" class="net.java.accurev4idea.actions.ActionDiff" text="Diff" description="Show difference between editor copy and current workspace" icon="/diff/Diff.png"/>
            <action id="AccuRev.ActionRevisionHistory" class="net.java.accurev4idea.actions.ActionRevisionHistory" text="Revision History" description="Show diff dialog with ability to select a revision from history to compare against"/>
            <separator/>
            <action id="AccuRev.ActionAdd" class="net.java.accurev4idea.actions.ActionAdd" text="Add" description="Add new file to AccuRev subsystem"/>
            <add-to-group group-id="VcsGroup" anchor="last"/>
        </group>
    </actions>

</idea-plugin>

